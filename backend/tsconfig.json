{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["@types/node"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,  // Set to true for better type safety
    "noImplicitAny": true,     // Set to true for better type safety
    "strictBindCallApply": true,  // Optional, enable stricter type checks
    "forceConsistentCasingInFileNames": true, // Optional, prevents casing mismatches
    "noFallthroughCasesInSwitch": true,  // Optional, ensures safety with switch cases
    "moduleResolution": "node"  // Ensure Node.js style module resolution
  }
}
